rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all users for avatars
    match /avatars/{fileName} {
      allow read: if true;
      allow write: if request.auth != null &&
        (request.auth.uid == resource.metadata['uid'] ||
         request.auth.uid == request.resource.metadata['uid']);
      allow delete: if request.auth != null &&
        request.auth.uid == resource.metadata['uid'];
    }

    // Allow public read access to TTS audio files
    // Write is handled by Admin SDK server-side, so no client write rules needed
    match /tts/{allPaths=**} {
      allow read: if true;
      // No write rule needed - Admin SDK bypasses security rules
    }

    // Default rule for other files
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}